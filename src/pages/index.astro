---
/* ===========================================
   Home Page (/)
   ===========================================

   Homepage design:
   - Hero section with personal statement
   - Selected projects (3 items from data)
   - Clear visual hierarchy
   - Minimal but intentional design

   Future enhancements:
   - Add hero background or subtle animation
   - Add social links (GitHub, Twitter, etc.)
   - Add newsletter signup
   - Add featured blog post preview
*/

import BaseLayout from '../layouts/BaseLayout.astro';
import { getProjects } from '../data/projects';

// Get first 3 projects for "Selected Works"
const selectedProjects = (await getProjects()).slice(0, 3);
---

<BaseLayout title="Home" activePage="home">
  <!-- Hero Section -->
  <section class="hero">
    <h1>Building digital experiences with intention.</h1>
    <p class="text-muted">
      I'm a developer who cares about the details. I build accessible,
      performant, and delightful interfaces ‚Äî one pixel at a time.
    </p>
  </section>

  <!-- Selected Projects -->
  <section>
    <h2>Selected Projects</h2>
    <div class="project-grid">
      {selectedProjects.map((project) => (
        <a href={`/projects#${project.id}`} class="project-card card">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="tech-stack">
            {project.tech.map((tech) => (
              <span class="tech-tag">{tech}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
    <div class="mt-lg">
      <a href="/projects" class="btn">View All Projects ‚Üí</a>
    </div>
  </section>

  <!-- Quick Links -->
  <section>
    <h2>Explore</h2>
    <div class="quick-links">
      <a href="/blog" class="quick-link">
        <span class="quick-link-icon">üìù</span>
        <span>Read my blog</span>
      </a>
      <a href="/about" class="quick-link">
        <span class="quick-link-icon">üëã</span>
        <span>Learn more about me</span>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero - Minimal statement style */
  .hero {
    margin-bottom: var(--space-2xl);
  }

  .hero h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--space-md);
    max-width: 20ch;
  }

  .hero p {
    font-size: 1.1rem;
    max-width: 60ch;
    line-height: 1.7;
  }

  /* Project Grid */
  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-lg);
  }

  .project-card {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .project-card:hover {
    color: inherit;
    transform: translateY(-2px);
  }

  .project-card h3 {
    margin-bottom: var(--space-sm);
  }

  .project-card p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin-bottom: var(--space-md);
  }

  /* Tech tags */
  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tech-tag {
    font-size: 0.75rem;
    padding: 2px 8px;
    background: var(--color-bg);
    border-radius: 4px;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  /* Quick Links */
  .quick-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .quick-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .quick-link:hover {
    background: var(--color-bg);
    color: var(--color-accent);
  }

  .quick-link-icon {
    font-size: 1.25rem;
  }
</style>
