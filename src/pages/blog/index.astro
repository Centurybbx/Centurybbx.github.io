---
/* ===========================================
   Blog Index Page (/blog)
   ===========================================

   Features:
   - Lists all blog posts from content collections
   - Sorted by date (newest first)
   - Shows date and reading time
   - Clean, readable layout

   Future enhancements:
   - Add pagination
   - Add category/tag filtering
   - Add RSS feed
   - Add featured post section
*/

import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title="Blog" activePage="blog">
  <header class="page-header">
    <h1>Blog</h1>
    <p class="text-muted">
      Thoughts on development, design, and building things.
    </p>
  </header>

  <section class="posts-list">
    {posts.length === 0 ? (
      <div class="empty-state">
        <p class="text-muted">No posts yet. Check back soon!</p>
      </div>
    ) : (
      posts.map((post) => (
        <article class="post-item">
          <a href={`/blog/${post.slug}`} class="post-link">
            <div class="post-content">
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-excerpt">{post.data.description}</p>
              <div class="post-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
              </div>
            </div>
          </a>
        </article>
      ))
    )}
  </section>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-sm);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
  }

  .post-item {
    border-bottom: 1px solid var(--color-border);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-link {
    display: block;
    padding: var(--space-lg) 0;
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .post-link:hover {
    color: inherit;
    opacity: 0.7;
  }

  .post-title {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
  }

  .post-excerpt {
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
    line-height: 1.6;
  }

  .post-meta {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .empty-state {
    text-align: center;
    padding: var(--space-2xl);
  }
</style>
