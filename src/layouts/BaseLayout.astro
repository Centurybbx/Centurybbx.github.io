---
/* ===========================================
   BaseLayout - Main HTML wrapper
   ===========================================

   This layout provides:
   - Common HTML structure (head, body, header, main, footer)
   - Global CSS import
   - Navigation with active state detection
   - Page metadata via props

   Props:
   - title: Page title (shows as "Name | Title")
   - description: Meta description for SEO
   - activePage: Current page for nav highlighting
*/

import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  activePage?: 'home' | 'projects' | 'blog' | 'about';
}

const { title, description = 'Personal portfolio and blog', activePage = 'home' } = Astro.props;
const siteName = 'Centurybbx';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{siteName} | {title}</title>

  <!-- Favicon - replace with your own -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Future: Add RSS feed link here -->
  <!-- <link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml"> -->
</head>
<body>
  <header class="header">
    <div class="container header-content">
      <a href="/" class="logo">{siteName}</a>
      <nav class="nav">
        <a href="/" class:list={['nav-link', { active: activePage === 'home' }]}>Home</a>
        <a href="/projects" class:list={['nav-link', { active: activePage === 'projects' }]}>Projects</a>
        <a href="/blog" class:list={['nav-link', { active: activePage === 'blog' }]}>Blog</a>
        <a href="/about" class:list={['nav-link', { active: activePage === 'about' }]}>About</a>
      </nav>
    </div>
  </header>

  <main class="main">
    <div class="container">
      <slot />
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; {new Date().getFullYear()} {siteName}. Built with Astro.</p>
    </div>
  </footer>
</body>
</html>
